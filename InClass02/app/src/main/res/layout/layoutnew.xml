<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/length2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/length1"
        android:layout_alignStart="@+id/length1"
        android:layout_below="@+id/length1"
        android:layout_marginTop="30dp"
        android:text="@string/length2" />

    <ImageView
        android:id="@+id/circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/circle"
        android:layout_above="@+id/shapeName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp" />

    <ImageView
        android:id="@+id/square"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/square"
        android:layout_alignTop="@+id/triangle"
        android:layout_alignLeft="@+id/line2"
        android:layout_alignStart="@+id/line2" />

    <ImageView
        android:id="@+id/triangle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/triangle"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/length1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="58dp"
        android:text="@string/length1"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/triangle"
        android:layout_alignEnd="@+id/triangle" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/length1"
        android:layout_alignBottom="@+id/length1"
        android:layout_alignEnd="@+id/circle"
        android:layout_alignRight="@+id/circle"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/line1"
        android:id="@+id/line1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/buttoncaluculate"
        android:layout_above="@+id/button2"
        android:layout_toRightOf="@+id/triangle"
        android:layout_toEndOf="@+id/triangle" />

    <EditText
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/length2"
        android:layout_alignBottom="@+id/length2"
        android:layout_alignLeft="@+id/line1"
        android:layout_alignStart="@+id/line1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/line2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <TextView
        android:id="@+id/shapeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shapeName"
        android:layout_below="@+id/square"
        android:layout_alignLeft="@+id/line2"
        android:layout_alignStart="@+id/line2"
        android:layout_marginTop="24dp"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:id="@+id/resulttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/shapeName"
        android:layout_alignStart="@+id/shapeName"
        android:layout_below="@+id/shapeName"
        android:layout_marginTop="15dp"
        android:text="@string/resulttext" />

</RelativeLayout>