<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textQunum"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:layout_marginTop="14dp"
        android:text="@string/textQunum" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textQunum"
        android:layout_alignBottom="@+id/textQunum"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/btnQuit" />

    <ImageView
        android:id="@+id/imgque"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="13dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/textView3"
        android:layout_toEndOf="@+id/textQunum"
        android:layout_marginStart="31dp" />

    <TextView
        android:id="@+id/textquestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgque"
        android:layout_marginTop="34dp"
        android:text="@string/textquestion"
        android:layout_alignStart="@+id/textQunum" />

    <LinearLayout
        android:id="@+id/llout"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:orientation="horizontal"
        android:layout_below="@+id/textquestion"
        android:layout_alignStart="@+id/textquestion"
        android:layout_marginTop="12dp"></LinearLayout>

    <Button
        android:id="@+id/btnQuit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="@string/btnQuit"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textQunum" />

    <Button
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnQuit"
        android:layout_toEndOf="@+id/imgque"
        android:text="@string/btnNext" />

    <Button
        android:id="@+id/btnnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnNext"
        android:layout_alignStart="@+id/btnNext"
        android:text="@string/btnnt" />


</RelativeLayout>