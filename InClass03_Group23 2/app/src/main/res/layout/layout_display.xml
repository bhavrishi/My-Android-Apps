<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/imgfinalmood"
        android:layout_alignStart="@+id/imgfinalmood"
        android:text="@string/valuename" />

    <TextView
        android:id="@+id/valuename"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/imgfinalmood"
        android:layout_alignStart="@+id/imgfinalmood"
        android:text="@string/valuename" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/finalemail"
        android:layout_alignBaseline="@+id/valueemail"
        android:layout_alignBottom="@+id/valueemail"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <ImageView
        android:id="@+id/imgfinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/avatar_f_1" />

    <TextView
        android:id="@+id/finalname"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/finaldept"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imgfinal"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:text="@string/finalname" />

    <TextView
        android:id="@+id/textfinalmood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/finalname"
        android:layout_marginTop="22dp"
        android:gravity="center_vertical|center"
        android:text="@string/textfinalmood" />

    <ImageView
        android:id="@+id/imgfinalmood"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/angry"
        android:layout_below="@+id/textfinalmood"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/valuedept"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/finalname"
        android:layout_alignBottom="@+id/finalname"
        android:layout_alignLeft="@+id/valueemail"
        android:layout_alignStart="@+id/valueemail"
        android:text="@string/valuedept" />

    <TextView
        android:id="@+id/valueemail"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_centerVertical="true"
        android:text="@string/valueemail" />
</RelativeLayout>