<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonthree"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickNumber"
        android:text="@string/buttonthree"
        android:textSize="50dp"
        android:layout_below="@+id/buttonMultiply"
        android:layout_toEndOf="@+id/buttontwo" />

    <Button
        android:id="@+id/buttonsix"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickNumber"
        android:text="@string/buttonsix"
        android:textSize="50dp"
        android:layout_above="@+id/buttonthree"
        android:layout_toEndOf="@+id/buttone8" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickNumber"
        android:text="@string/button9"
        android:textSize="50dp"
        android:layout_below="@+id/buttonAdd"
        android:layout_toEndOf="@+id/buttonfive" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickOperator"
        android:text="@string/buttonMultiply"
        android:textSize="50dp"
        android:layout_above="@+id/buttondivide"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/buttonthree" />

    <Button
        android:id="@+id/dotButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="@string/dotButton"
        android:textSize="50dp"
        android:onClick="onClickDot"
        android:layout_toEndOf="@+id/clearbutton"
        android:layout_above="@+id/buttonSubtract" />

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickOperator"
        android:text="@string/buttonSubtract"
        android:textSize="50dp"
        android:layout_above="@+id/buttonMultiply"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/buttonthree" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickOperator"
        android:text="@string/buttonAdd"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/clearbutton"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/clearbutton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="20dp"
        android:onClick="onClickClear"
        android:text="@string/clearbutton"
        android:textSize="50dp"
        android:layout_above="@+id/buttone8"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button9" />

    <Button
        android:id="@+id/buttonfive"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickNumber"
        android:text="@string/buttonfive"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/buttonsix"
        android:layout_toStartOf="@+id/buttonsix" />

    <Button
        android:id="@+id/buttonone"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="20dp"
        android:onClick="onClickNumber"
        android:text="@string/buttonone"
        android:textSize="50dp"
        android:layout_below="@+id/buttonfour"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonseven"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="20dp"
        android:onClick="onClickNumber"
        android:text="@string/buttonseven"
        android:textSize="50dp"
        android:layout_above="@+id/buttonfour"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonfour"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:elevation="20dp"
        android:onClick="onClickNumber"
        android:text="@string/button4"
        android:textSize="50dp"
        android:layout_above="@+id/buttonthree"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/buttonzero"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickNumber"
        android:text="@string/buttonzero"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/buttonone"
        android:layout_toStartOf="@+id/buttonthree" />

    <Button
        android:id="@+id/buttone8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickNumber"
        android:text="@string/buttonc8"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/buttonseven"
        android:layout_toEndOf="@+id/buttonseven"
        android:layout_alignTop="@+id/buttonseven" />

    <Button
        android:id="@+id/buttontwo" android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickNumber"
        android:text="@string/buttontwo"
        android:textSize="50dp"
        android:layout_below="@+id/buttonsix"
        android:layout_toEndOf="@+id/buttonone" />

    <Button
        android:id="@+id/buttondivide"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:onClick="onClickOperator"
        android:text="@string/buttondivide"
        android:textSize="50dp"
        android:layout_above="@+id/buttonequals"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/buttonthree" />

    <Button
        android:id="@+id/buttonequals"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonMultiply"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/buttontwo"
        android:onClick="onClickEqual"
        android:text="@string/buttonequals"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="wrap_content"
        android:layout_height="60dp"

        android:layout_alignParentStart="true"
        android:elevation="11dp"
        android:text="@string/resultText"
        android:textSize="50dp" />

</RelativeLayout>